<#macro linksOfType links type title>
<div class="subheading" style="color:black;">${title}</div>
<ul class="bulleted">
	<#list links as link>
	<#if link.type==type>
		<li><a href="${link.href}" target="${link.target}"<#if link.description??> title="${link.description}"</#if>>${link.text}</a></li>
	</#if>
	</#list>
</ul>
<br/>
</#macro>