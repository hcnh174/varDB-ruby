<@vardb.addScript>
var sequence_id='${sequence.id?c}';
var divid='tagdiv';

function reloadTags()
{
	Ext.ux.vardb.Vardb.ajaxRequest('/tags/ajax/sequence.json',{sequence_id: sequence_id},function(json)
	{
		var list=[], index, tag;
		for (index=0;index<json.tags.length;index++)
		{
			tag=json.tags[index];
			list.push(Ext.ux.vardb.tags.Services.formatTag(tag));
		}
		Ext.DomHelper.overwrite(divid,list.join('&nbsp;'));
	});
}

function addTag()
{
	var dialog=new Ext.ux.vardb.tags.ApplyTagDialog(
	{
		sequence_id: sequence_id,
		callback: function(tag)
		{
			Ext.ux.vardb.Vardb.info('The tag has been applied to this sequence');
			reloadTags();
		}
	});
}

</@vardb.addScript>

<@vardb.onReady>
	function createPanel(id,title)
	{
		var panel=new Ext.Panel({
			title: title,
			contentEl: id,
			renderTo: id+'_panel',
			width: Ext.get(id).getWidth(),
			hideCollapseTool: false,
			titleCollapse: true,
			collapsible: true,
			collapsed: false
	    });
	}
	
	<#if sequence.translation?has_content>
		createPanel('protein_sequence','Translation');
	</#if>	
	<#if sequence.sequence?has_content>
		createPanel('nucleotide_sequence','Nucleotide sequence');
		var gcplot=new Ext.ux.vardb.GcChart({sequence: '${sequence.sequence}', title: 'GC Content', renderTo: 'gcplot'});
	</#if>
	
</@vardb.onReady>
</@vardb.layout>
