<#import "/global.ftl" as vardb>

<@vardb.layout title="Pathogens" location={'Pathogens':'/pathogens.html'} cur="pathogens">

<div id="pathogentabs"></div>

<@vardb.comments type="PAGE" identifier="pathogens"/>

<@vardb.addScript>
var pathogen_data=${pathogensjson.json};
